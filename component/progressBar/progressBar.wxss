/* component/progressBar/progressBar.wxss */
.progressBox{
  width: 100%;
  height: 339rpx;
  box-sizing: border-box;
  padding-top: 30rpx;
  padding-left: 30rpx;
  padding-right: 31rpx;
}
.progressBox .boxTitle{
  color: #666666;
  font-size: 28rpx;
  height: 40rpx;
  line-height: 40rpx;
}
.progressBox .boxInfo{
  height: 40rpx;
  width: 100%;
  line-height: 40rpx;
  margin-top: 16rpx;
}
.progressBox .boxInfo .boxInfoLeft{
  color: #333333;
  font-size: 28rpx;
  float: left;
}
.progressBox .boxInfo .boxInfoPrice{
  color: #FE4B3C;
  font-size: 28rpx;
  float: left;
  margin-left: 8rpx;
}
.progressBox .boxInfo .boxInfoRight{
  color: #999999;
  font-size: 24rpx;
  float: right;
}
.progressBox .progressimg{
  width: 100%;
  height: 213rpx;
  box-sizing: border-box;
  padding-top: 23rpx;
}
.progressBox .progressimg .progressimgTop{
  width: 100%;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.progressBox .progressimg .progressimgTop .first{
  width: 40rpx;
  height: 40rpx;
  border: 1px  solid #D3D3D3;
  border-radius: 50%;
}
.progressBox .progressimg .progressimgTop .first .topImg{
  width: 40rpx;
  height: 40rpx;
}
.progressBox .progressimg .progressimgTop .boxLine{
  width: 180rpx;
  height: 2rpx;
  background-color: #D3D3D3;
}
.progressBox .progressimgText{
  width: 100%;
  margin-top: 17rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.progressBox .progressimgText .textColor{
  /* color: #25BF24; */
  font-size: 24rpx;
  line-height: 23rps;
  margin-bottom: 4rpx;
  color: #333333;
}
.textchangeColor{
  font-size: 24rpx;
  line-height: 23rps;
  margin-bottom: 4rpx;
  color: #25BF24
}