/**app.wxss**/
page{
  width: 100%;
  height: 100%;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
.nav{
  width: 100%;
  overflow: hidden;
  position: relative;
  top: 0;
  left: 0;
  z-index: 10;
}
.nav-title{
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  position: absolute;
  bottom: 0;
  left: 0;
  z-index: 10;
  font-family:PingFang-SC-Medium;
  font-size:36rpx;
  letter-spacing:4rpx;
}
.nav .back{
  width: 44rpx;
  height: 44rpx;
  position: absolute;
  bottom: 0;
  left: 0;
  padding: 20rpx 20rpx;
}
.bg-white{
  background-color: #000;
}
.bg-gray{
  background-color: red;
}
.overflow{
  overflow: auto;
}
.hidden{
  overflow: hidden;
}

