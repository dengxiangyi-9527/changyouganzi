/* pages/editUserInfo/medicalCheck/medicalCheck.wxss */
button::before {
  border: 0;
  border: none;
}

button::after {
  border: 0;
  border: none;
}

.content {
  width: 100%;
  height: 100vh;
  background-color: #fafafa;
}

.content .bg_pic {
  width: 100%;
  height: 320rpx;
}

.content .bg_pic image {
  width: 100%;
  height: 320rpx;
}

.content .main {
  margin: 0 30rpx;
  width: 660rpx;
  background-color: #FFFFFF;
  border-radius: 30rpx;
  position: absolute;
  top: 260rpx;
  padding-left: 30rpx;
}

.content .main .ky_main_bg {
  padding: 0;
  margin: 0;
  width: 260rpx;
  height: 280rpx;
  position: absolute;
  top: -3rpx;
  right: 0;
}

.content .main .main_tit {
  padding-top: 48rpx;
  color: #3E4B6E;
  font-size: 28rpx;
  padding-bottom: 88rpx;
}

.content .main .main_tit .txt {
  font-size: 42rpx;
  color: #333333;
  font-weight: bold;
  padding-bottom: 16rpx;
}

.content .main .formData {}

.content .main .formData .formDataItem {
  height: 116rpx;
  padding-bottom: 48rpx;
}

.content .main .formData .formDataItem .formDataItem_tit {
  color: #333333;
  font-size: 26rpx;
  padding-bottom: 4rpx;
}

.content .main .formData .formDataItem input {
  margin-right: 30rpx;
  height: 80rpx;
  border-bottom: 2rpx solid #EDEDED;
  color: #333333;
  font-weight: bold;
  
}

.content .main .formData .card {
  width: 630rpx;
  height: 286rpx;
  background-color: #F5F6FA;
  border-radius: 16rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.content .main .formData .card .card_left {
  font-size: 22rpx;
  color: #666666;
}

.content .main .formData .card .card_left .card_left_tit {
  font-size: 40rpx;
  color: #333333;
  padding-bottom: 4rpx;
  font-weight: bold;
}

.content .main .formData .card .card_right {
  width: 320rpx;
  height: 206rpx;
  position: relative;
}

.content .main .formData .card .card_right .card_right_bg {
  width: 320rpx;
  height: 206rpx;
}

.content .main .formData .card .card_right .user_pic {
  width: 280rpx;
  height: 166rpx;
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  margin: auto;
}

.content .main .formData .card .card_right .again {
  width: 280rpx;
  height: 46rpx;
  position: absolute;
  bottom: 20rpx;
  left: 20rpx;
  background-color: #666666;
  opacity: 0.8;
  font-size: 22rpx;
  color: #FFFFFF;
  text-align: center;
  line-height: 46rpx;
  border-bottom-right-radius: 12rpx;
  border-bottom-left-radius: 12rpx;
}

.content .main .submit {
  height: 88rpx;
  width: 630rpx;
  border-radius: 44rpx;
  background-color: #E9EBEE;
  text-align: center;
  line-height: 88rpx;
  font-size: 36rpx;
  color: #999999;
  margin: 0;
  margin-top: 48rpx;
  margin-bottom: 30rpx;
}
.content .main .allIputed{
  background-color: #18AFFF;
  color: #fff;
}