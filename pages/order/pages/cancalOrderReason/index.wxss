/* pages/cjjs/cancalOrderReason/index.wxss */
page{
  width: 750rpx;
  background-color: #fafafa;
}
.bg{
  width: 750rpx;
  background-color: #fafafa;
}
.bg .content{
  background-color: #fff;
  width: 750rpx;
  padding: 30rpx 0 0 0;
}
.bg .content .description{
  color: #999;
  font-size: 24rpx;
  padding-right: 30rpx;
  line-height: 40rpx;
  padding-left: 30rpx;
}
.bg .content .reason{
  width: 100%;
  background-color: #fff;
  margin-top: 40rpx;
}
 .btn{
  width: 100%;
  position: fixed;
  bottom: 30rpx;
  height: 88rpx;
  border-radius: 24rpx;
  display: flex;
  justify-content: center;
  padding: 30rpx 30rpx 0rpx 30rpx;
  box-sizing: border-box;
  background-color: #fff;
  margin-bottom: 100rpx;
}
 .btn button{
  width: 100%;
  height: 88rpx;
  font-size: 36rpx;
}
 .btn .un_select_button{
  color: #CCCCCC;
  background-color: #E6E6E6;
}
 .btn .select_button{
  color: #fff;
  background-color: #18AFFF;
}
.van-cell{
  height: 104rpx;
  display: flex;
  align-items: center;
}