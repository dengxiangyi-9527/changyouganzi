/* pages/usercollect/usercollect.wxss */
page{
  width: 100%;
  height: 100%;
  background-color: #fff;
}
.collect{
  width: 100%;
  height: 100%;  
}
.collect .collectList{
  background-color: #fff;
}
.collect .collectList .collect_item{
  width: 100%;
  height: 254rpx;
  background-color: #fff;
  display: flex;
  box-sizing: border-box;
  padding: 30rpx 30rpx 24rpx 30rpx;
  border-top: 1rpx solid #EDEDED;
}
.collect .collectList .collect_item:nth-last-child(1){
  border-bottom: 1rpx solid #EDEDED;
}
.collect .collectList .collect_item .item_img{
  width: 200rpx;
  height: 200rpx;
  background-color: #000;
  border-radius: 7rpx;
  position: relative;
}
.collect .collectList .collect_item .item_img image{
  width: 100%;
  height: 100%;
}
.collect .collectList .collect_item .item_img .img_text{
  position: absolute;
  font-size: 24rpx;
  color: #fff;
  line-height: 36rpx;
  top: 0;
  left: 8rpx;
}
.collect .collectList .collect_item .item_info{
  height: 100%;
  flex: 1;
  margin-left: 16rpx;
}
.collect .collectList .collect_item .item_info .info_title{
  width: 444rpx;
  height: 90rpx;
  font-size: 32rpx;
  color: #333;
  line-height: 45rpx;
  font-weight: bold;
  overflow: hidden;
  text-overflow:ellipsis;
  display: -webkit-box;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.collect .collectList .collect_item .item_info .info_tab{
  margin-top: 16rpx;
  display: flex;
}
.collect .collectList .collect_item .item_info .info_tab .tab_box{
  height: 34rpx;
  line-height: 34rpx;
  background-color: #F5F7F9;
  border-radius: 4rpx;
  margin-right: 16rpx;
  color: #666;
  font-size: 22rpx;
}
.collect .collectList .collect_item .item_info .info_bottom {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.collect .collectList .collect_item .item_info .info_bottom .info_price{
  margin-top: 10rpx;
  font-size: 36rpx;
  line-height: 50rpx;
  color: #FE4B3C;
}
.collect .collectList .collect_item .item_info .info_bottom .info_assess{
  font-size: 24rpx;
  color: #999;
  line-height: 36rpx;
}