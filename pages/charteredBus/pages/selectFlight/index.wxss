.carTabBox{
  display: flex;
  width: 750rpx;
  padding: 0rpx 20rpx;
  box-sizing: border-box;
  padding-top: 25rpx;
  justify-content: space-between;
}
.carTabBox .tabBox{
  flex: 1;
  padding: 16rpx 0rpx;
  box-sizing: border-box;
  background-color: #FFF;
  border-radius: 20rpx;
  border: 1rpx solid #09AFFF;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-left: 22rpx;
}
.carTabBox .tabBox:nth-child(1){
  margin-left: 0;
}
.carTabBox .ActiveTabBox{
  background-color: #09AFFF;
  border: 1rpx solid #FFF;
}
.carTabBox .tabBox .seatNum{
  font-size: 36rpx;
  line-height: 50rpx;
  font-weight: bolder;
  color: #333;
}
.carTabBox .ActiveTabBox .Activetext{
  color: #FFF !important;
}
.carTabBox .tabBox .carPrice{
  font-size: 28rpx;
  line-height: 40rpx;
  color: #999;
}
.warnText{
  font-size: 26rpx;
  line-height: 38rpx;
  margin-top: 180rpx;
  color: #999999;
  text-align: center;
}


