/* pages/invoice//pages/detail/index.wxss */
page{
  width: 750rpx;
  min-height: 100%;
  background-color: #FAFAFA;
}
.detail_wrap{
  width: 750rpx;
}
.detail_title{
  padding: 30rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  line-height: 40rpx;
  color: #666;
}

.list_item{
  background-color: #FFF;
  padding: 0 30rpx;
  box-sizing: border-box;
}
.list_box{
  width: 100%;
  padding:30rpx 0;
  box-sizing: border-box;
  border-bottom: 2rpx solid #EDEDED;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.list_left{
  display: flex;
  align-items: center;
  
}
.list_title{
  font-size: 32rpx;
  line-height: 45rpx;
  color: #333;
}
.btnBox{
  width: 750rpx;
  padding: 0rpx 30rpx;
  box-sizing: border-box;
  margin-top: 48rpx;
}
.btn{
  width: 100%;
  padding: 19rpx 0;
  box-sizing: border-box;
  background-color: #18AFFF;
  border-radius: 12rpx;
  color: #FFF;
  font-size: 36rpx;
  line-height: 50rpx;
  font-weight: bold;
  text-align: center;
}