/* pages/invoice//pages/index/index.wxss */
page{
  width: 750rpx;
  min-height: 100%;
  /* background-color: #FAFAFA; */
  background-color: #FFF;
}
.invoice_wrap{
  width: 750rpx;
  border-top: 2rpx solid #EDEDED;
  padding:0rpx 30rpx;
  box-sizing: border-box;
}
.addInvoice{
  width: 100%;
  padding: 48rpx 0;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  background-color: #FFF;
  border-bottom: 2rpx solid #EDEDED;
}
.addInvoice image{
  width: 30rpx;
  height: 30rpx;
  vertical-align: top;
}
.addInvoiceText{
  font-size: 32rpx;
  line-height: 44rpx;
  color: #333;
}
.invoiceList{
  width: 750rpx;
  background-color: #FFF;
  padding: 0 30rpx;
  box-sizing: border-box;
}
.invoiceItem{
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding: 30rpx 0;
  box-sizing: border-box;
  border-bottom: 2rpx solid #EDEDED;
}
.invoiceTitle{
  display: flex;
  align-items: center;
}
.titleText{
  font-size: 32rpx;
  line-height: 45rpx;
  color:#333;
}
.titleBox{
  padding: 0 8rpx;
  box-sizing: border-box;
  border: 1rpx solid #B8E6FF;
  color: #18AFFF;
  font-size: 24rpx;
  line-height: 30rpx;
  font-weight: bold;
  margin-left: 8rpx;
}
.invoiceNum{
  margin-top: 16rpx;
  font-size: 28rpx;
  line-height: 40rpx;
  color: #999;
}
