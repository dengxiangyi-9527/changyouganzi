/* pages/user/user.wxss */

page {
  width: 100%;
  height: 100%;
  position: relative;
}

.bg {
  width: 100%;
  height: 100%;
  background-color: #fafafa;
}

.bg image {
  width: 100%;
  height: 480rpx;
}

.main {
  width: 690rpx;
  height: 1000rpx;
  position: absolute;
  top: 200rpx;
  left: 30rpx;
}

.main .user_info {
  width: 100%;
  height: 150rpx;
  overflow: hidden;
}

.main .user_info image {
  width: 150rpx;
  height: 150rpx;
  float: left;
  margin-right: 20rpx;
  border-radius: 50%;
}

.main .user_info .wrap {
  height: 150rpx;
  width: 490rpx;
  float: left;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.main .user_info .wrap .intro {
  height: 75rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  word-break: break-all;
  word-wrap: break-word;
}

.main .user_info .login {
  width: 400rpx;
  height: 54rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.main .user_info .ky_hero {
  height: 68rpx;
  line-height: 68rpx;
}

.main .user_info .ky_hero image {
  margin-top: 16rpx;
  width: 130rpx;
  height: 40rpx;
  margin-bottom: 18rpx;
  border-radius: 0;
}

.main .user_info .nickName {
  font-size: 42rpx;
  color: #fff;
}

.main .user_info .login .edit_pic {
  padding-top: 10rpx;
  padding-left: 8rpx;
  width: 28rpx;
  height: 28rpx;
  box-sizing: border-box;
}

.main .user_info .login .edit_pic .pic_Icon {
  width: 25rpx;
  height: 25rpx;
  border: none;
  vertical-align: top;
}

.main .user_info view text {
  color: #fff;
  font-size: 28rpx;
}

/* 包含订单这一项 */
.main .wrap_order {
  width: 690rpx;
  height: 196rpx;
  background-color: #fff;
  border-radius: 16rpx;
  margin-top: 44rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  box-shadow: 0 4rpx 20rpx 0 rgba(0, 0, 0, 0.04);
}

.main .wrap_order .wrap_item {
  text-align: center;
}

.main .wrap_order .wrap_item image {
  width: 82rpx;
  height: 82rpx;
  margin-bottom: 4rpx;
}

.main .wrap_order .wrap_item view {
  font-size: 24rpx;
  color: #666666;
}

/* 推荐有礼 */
.main .wrap_recommend {
  margin-top: 24rpx;
  width: 690rpx;
  height: 172rpx;
  background-color: #fff;
  border-radius: 16rpx;
}

.main .wrap_recommend image {
  width: 690rpx;
  height: 172rpx;
}

/* 实名认证下面的菜单栏 */
.main .wrap_verified {
  margin-top: 24rpx;
  width: 630rpx;
  min-height: 400rpx;
  padding: 0 30rpx;
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 20rpx 0 rgba(0, 0, 0, 0.04);
}

.main .wrap_verified .title_class {
  font-size: 28rpx;
  color: #333333;
  font-weight: bold;
  height: 90rpx;
  line-height: 90rpx;
}

.main .wrap_verified .icon_class {
  width: 630rpx;
  height: 140rpx;
  display: flex;
  justify-content: left;
  flex-wrap: wrap;
}

.main .wrap_verified .icon_class .icon_item {
  width: 25%;
  height: 140rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  flex-wrap: wrap;
}

.main .wrap_verified .icon_class .icon_item image {
  width: 48rpx;
  height: 48rpx;
}

.main .wrap_verified .icon_class .icon_item view {
  font-size: 24rpx;
  color: #333333;
}
.main .wrap_verified .icon_class .icon_item .text{
  margin-top: 16rpx;
}

.main .wrap_verified .icon_class .icon_item .zuan {
  width: 32rpx;
  height: 28rpx;
  position: absolute;
  right: 12rpx;
  top: 14rpx;
}
.main .wrap_verified .icon_class .verified{
  position: relative;
  width: 140rpx;
  height: 140rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.main .wrap_verified .icon_class .icon_item .unVerified {
  width: 76rpx;
  height: 30rpx;
  position: absolute;
  top: 2rpx;
  right: -18rpx;
}

.main .wrap_verified .icon_class .wrap_zuan {
  position: relative;
}