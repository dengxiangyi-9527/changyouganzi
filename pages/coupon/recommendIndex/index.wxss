/* pages/coupon/recommendIndex/index.wxss */
.recommendIndex {
  background: #FEB553;
  padding-bottom: 108rpx;
  position: relative;
}

.recommendIndex_fixed {
  height: 100vh;
  padding-bottom: 0;
  overflow-y: hidden;
  background: #FEB553;
  position: relative;
}

.header {
  width: 100%;
  position: fixed;
  left: 0;
  top: 0;
  height: auto;
}
.coupon_index_back{
  width: 750rpx;
  height: 1555rpx;
  display: block;
}
.coupon_gongnue{
  width: 750rpx;
  height: 1445rpx;
  display: block;
}
.coupon_back {
  width: 750rpx;
  height: 951rpx;
  display: block;
}

.coupon_img {
  width: 750rpx;
  height: 582rpx;
  display: block;
}

.title_img {
  width: 600rpx;
  height: 99rpx;
  display: block;
  margin: auto;
}

.title_box {
  margin-top: 80rpx;
  margin-bottom: 30rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.title_icon {
  width: 28rpx;
  height: 19rpx;
  display: block;
  margin-top: 15rpx;
}

.title_text {
  font-size: 34rpx;
  line-height: 46rpx;
  color: #FFFFFF;
  margin-left: 11rpx;
  margin-right: 11rpx;
  font-weight: bold;
}

.number_box {
  width: 686rpx;
  max-height: 548rpx;
  /* height: 548rpx; */
  background: rgba(255, 255, 255, 1);
  border-radius: 16rpx;
  margin: auto;
  padding-top: 48rpx;
  padding-bottom: 45rpx;
}

.nodata_box {
  width: 686rpx;
  background: rgba(255, 255, 255, 1);
  border-radius: 16rpx;
  margin: auto;
  padding-top: 48rpx;
  padding-bottom: 45rpx;
  height: 198rpx;
  font-size: 26rpx;
  color: #782D02;
  line-height: 198rpx;
  text-align: center;
}

.number_box_inner {
  width: calc(100% - 96rpx);
  margin: auto;
  max-height: 472rpx;
  /* height: 472rpx; */
  overflow-y: scroll;
}

.single_box {
  width: 100%;
  height: 54rpx;
  margin-bottom: 64rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.single_left {
  width: calc(100% - 300rpx);
  display: flex;
  flex-direction: row;
}

.photo_box {
  width: 54rpx;
  height: 54rpx;
  border-radius: 27rpx;
  overflow: hidden;
  justify-content: space-between;
}
.photo_img{
  width:54rpx;
  height: 54rpx;
  display: block;
}

.name {
  margin-left: 22rpx;
  width: calc(100% - 76rpx);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 26rpx;
  line-height: 54rpx;
  color: #772C00;
  font-weight: 400;
}

.single_right {
  width: 280rpx;
  line-height: 54rpx;
  color: #772C00;
  font-weight: 400;
  font-size: 26rpx;
  text-align: right;
  margin-left: 20rpx;
}

.tips {
  font-size: 24rpx;
  line-height: 36rpx;
  color: #772C00;
  text-align: center;
}

.coupon_text {
  text-decoration: underline;
}

.step_box {
  width: 686rpx;
  height: 196rpx;
  background: rgba(255, 255, 255, 1);
  border-radius: 16rpx;
  margin: auto;
  padding-top: 60rpx;
  /* padding-top: 34rpx; */
}

.step_single {
  margin-left: 25rpx;
  margin-right: 25rpx;
  font-size: 24rpx;
  line-height: 36rpx;
  color: #772C00;
}

.step_top {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  margin-bottom: 20rpx;
}

.step_number {
  width: 40rpx;
  height: 40rpx;
  background: linear-gradient(270deg, rgba(252, 133, 72, 1) 0%, rgba(255, 67, 0, 1) 100%);
  border-radius: 20rpx;
  font-size: 28rpx;
  color: #FFFFFF;
  line-height: 40rpx;
  text-align: center;
}

.step_bottm {
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.step_line {
  width: 140rpx;
  height: 1rpx;
  background: #772C00;
  margin: 19rpx 24rpx;
}
button{
  padding-left: 0rpx;
  padding-right: 0rpx;
  background: #FFFFFF;
  background-color: #FFFFFF;
}
button::after{
  /* background: #FFFFFF; */
  border: none;
}
.share_box {
  position: fixed;
  width: 100%;
  height: 100vh;
  background: rgba(0, 0, 0, .3);
  left: 0;
  top: 0;
}
.close_icon{
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  right: 0rpx;
  top: -50rpx;
}
.btn_box {
  width: 750rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px 4rpx 20rpx 0rpx rgba(0, 0, 0, 0.08);
  border-radius: 30rpx 30rpx 0rpx 0rpx;
  position: absolute;
  left: 0;
  bottom: 0;
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.btn_single {
  width: 100rpx;
  margin-top: 30rpx;
}
.share_button{
  width: 96rpx;
}
.share_icon {
  width: 96rpx;
  height: 96rpx;
  display: block;
  margin: auto;
}

.share_text {
  font-size: 20rpx;
  line-height: 36rpx;
  color: #8C5A16;
  text-align: center;
  margin-top: 15rpx;
}

.single_right_share {
  margin-left: 220rpx;
}

.save_btn {
  width: 690rpx;
  height: 88rpx;
  background: rgba(24, 175, 255, 1);
  border-radius: 12rpx;
  margin: 48rpx auto 0rpx auto;
  font-size: 36rpx;
  color: #FFFFFF;
  line-height: 88rpx;
  text-align: center;
}

.post_box {
  /* height: 1147rpx; */
  width: 654rpx;
  position: absolute;
  left: 48rpx;
  box-shadow: 0rpx 4rpx 20rpx 0rpx rgba(0, 0, 0, 0.08);
