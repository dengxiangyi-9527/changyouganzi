/* pages/cjjs/mapselect/locList/index.wxss */
page{
  width: 750%;
  height: 100%;
}
.wrap{
  width: 750rpx;
  height: 100%;
  background-color: #FFFFFF;
  padding-bottom: 120rpx;
  box-sizing: border-box;
}
.wrap .selectBox{
  width: 100%;
  padding: 24rpx 29rpx 30rpx 30rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.wrap .selectBox .selectText{
  font-size: 30rpx;
  line-height: 42rpx;
  color: #666;
  margin-left: 24rpx;
}
.wrap .selectBox .searchBox{
  flex: 1;
  padding: 16rpx 30rpx;
  box-sizing: border-box;
  background-color: #F6F7F9;
  border-radius: 38rpx;
  display: flex;
  align-items: center;
}
.wrap .selectBox .searchBox .cityBox{
  display: flex;
  align-items: center;
}
.wrap .selectBox .searchBox .cityBox .cityName{
  font-size: 32rpx;
  line-height: 44rpx;
  color: #666;
  max-width: 150rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.wrap .selectBox .searchBox .cityBox image{
  width: 16rpx;
  height: 16rpx;
  margin-left: 16rpx;
}
.wrap .selectBox .searchBox .line{
  width: 1rpx;
  height: 24rpx;
  background-color: #DEDEDE;
  margin-left: 33rpx;
  margin-right: 24rpx;
}
.wrap .selectBox .searchBox .searchInput{
  flex: 1;
  border: none;
  font-size: 30rpx;
  line-height: 40rpx;
  color: #333;
  font-weight: 600;
  max-width: 350rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.wrap .main{
  width: 750rpx;
  padding:0 30rpx;
  box-sizing: border-box;
  background-color: #fff;
  margin-bottom: 120rpx;
}
.wrap .main .locitem{
  border-bottom: 1rpx solid #EDEDED;
  padding: 30rpx 0 30rpx 0;
  box-sizing: border-box;
}
.wrap .main .locitem .loctitle{
  display: flex;
  font-size: 32rpx;
  line-height: 44rpx;
  font-weight: 600;
  color: #333333;
}
.wrap .main .locitem .loctitle .lockeyword{
  color: #15AFFF;
}
.wrap .main .locitem .locmain{
  font-size: 24rpx;
  color: #666666;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  margin-top: 10rpx;
}
.wrap .commonRoutes{
  width: 750rpx;
}
.wrap .commonRoutes .routeList{
  width: 100%;
  padding:0 30rpx;
  box-sizing: border-box;
}
.wrap .commonRoutes .routeList .listItem{
  padding: 30rpx 0;
  box-sizing: border-box;
  border-bottom: 1rpx solid #EDEDED;
}
.wrap .commonRoutes .routeList .listItem .itemTop{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.wrap .commonRoutes .routeList .listItem .itemTop .city{
  display: flex;
  align-items: center;
}
.wrap .commonRoutes .routeList .listItem .itemTop .citybtn{
  width: 28rpx;
  height: 28rpx;
}
.wrap .commonRoutes .routeList .listItem .itemTop .cityName{
  font-size: 32rpx;
  line-height: 44rpx;
  color: #333;
  font-weight: 600;
  margin-right: 16rpx;
}
.wrap .commonRoutes .routeList .listItem .itemTop .cityTab{
  padding: 0 12rpx;
  box-sizing: border-box;
  border: 1rpx solid #50BC8F;
  border-radius: 4rpx;
  color: #50BC8F;
  font-size: 20rpx;
  line-height: 30rpx;
}
.wrap .commonRoutes .routeList .listItem .itemLoc{
  font-size: 24rpx;
  line-height: 36rpx;
  color: #666;
  margin-top:10rpx;
  max-width: 677rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.wrap .commonRoutes .goAdd{
  width: 100%;
  padding: 30rpx 0;
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  border-bottom: 1rpx solid #EDEDED;
}
.wrap .commonRoutes .goAdd .addText{
  color: #333;
  font-size: 32rpx;
  line-height: 44rpx;
  font-weight: bold;
  margin-left: 16rpx;
}
.wrap .commonRoutes .goAdd .addIcon{
  width: 40rpx;
  height: 40rpx;
}
.wrap .commonRoutes .goAdd .addIcon image{
  width: 100%;
  height: 100%;
  vertical-align: top;
  border: none;
}
.wrap .commonRoutes .goBack{
  padding: 0rpx 30rpx;
  box-sizing: border-box;
}
.wrap .commonRoutes .goBack .backBox{
  padding: 30rpx 9rpx;
  box-sizing: border-box;
  width: 100%;
  border-bottom: 1rpx solid #EDEDED;
  display: flex;
  align-items: center;
}
.wrap .commonRoutes .goBack .backBox image{
  width: 40rpx;
  height: 40rpx;
  vertical-align: top;
  margin-right: 16rpx;
}
.wrap .commonRoutes .goBack .backBox .text{
  font-size: 32rpx;
  line-height: 44rpx;
  color: #333;
  font-weight: bold;
}