/**index.wxss**/
page{
  background: #FAFAFA;
  width: 100%;
  height: 100vh;
}
.header {
  position: relative;
  width: 100%;
}

.bg_banner {
  height: 420rpx;
  width: 100%;
}

.bg_banner image {
  height: 420rpx;
  width: 100%;
}

.wx-swiper-dots{position:relative;left: unset!important;right: 0;}
.wx-swiper-dots.wx-swiper-dots-horizontal{
margin-bottom: -5rpx;
}

.txt {
  position: absolute;
  z-index: 999;
  top: 134rpx;
  left: 48rpx;
  color: #fff;
}

.txt .big_tit {
  font-size: 60rpx;
  margin-bottom: 8rpx;
  margin-top: 200rpx;
  text-shadow: 2rpx 0rpx 6rpx rgba(0, 0, 0, .5);
  display: flex;
}

.txt .small_tit {
  font-size: 24rpx;
}

.txt button {
  width: 160rpx;
  height: 60rpx;
  font-size: 24rpx;
  background-color: transparent;
  text-align: center;
  line-height: 60rpx;
  border: 2rpx solid #fff;
  border-radius: 24rpx;
  padding: 0;
  margin-top: 12rpx;
  color: #fff;
}

.header .sprite{
  width: 100%;
  background-color: #FAFAFA;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 52rpx;
  box-sizing: border-box;
  padding-top: 50rpx;
}
.header .sprite .spriteBox{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.header .sprite .spriteBox .spriteImg{
  width: 88rpx;
  height: 88rpx;
}
.header .sprite .spriteBox .spriteText{
  font-size: 24rpx;
  color: #333;
  margin-top: 16rpx;
}

.text_pic {
  width: 750rpx;
  height: 1477rpx;
  padding-bottom: 186rpx;
}

.text_pic image {
  width: 100%;
  height: 100%;
}

.maskBox {
  width: 100%;
  height: 100%;
  position: fixed;
  bottom: 0;
  background-color: rgba(0, 0, 0, .3);
  z-index: 999999;
  display: flex;
  justify-content: center;
  align-items: center;
}

.maskBox .boxImg {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.maskBox .boxImg .imgIcon {
  width: 604rpx;
  height: 683rpx;
}


.maskBox .boxImg .imgDel {
  width: 56rpx;
  height: 56rpx;
  margin-top: 48rpx;
}
.tab_box{
  width: 690rpx;
  margin: 30rpx 0;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
}
.tab_single{
  margin-right: 48rpx;
  position: relative;
}
.single_name{
  font-size: 32rpx;
  color: #333333;
  line-height: 44rpx;
  font-weight: bold;
}
.single_name_active{
  font-size: 42rpx;
  color: #333;
  font-weight: bold;
}
.index_cur_tab{
  width: 42rpx;
  height: 18rpx;
  display: block;
  margin: 10rpx auto;
}
.hot_icon{
  position: absolute;
  width: 50rpx;
  height: 30rpx;
  display: block;
  right:-50rpx;
  top: -5rpx;
}

