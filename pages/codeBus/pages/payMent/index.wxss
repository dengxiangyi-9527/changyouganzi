/* pages/cjjs/payment/index.wxss */
.wrap{
  width: 750rpx;
  position: relative;
  height: 100%;
  background-color: #F2F3F7;
}
.wrap .header image{
  width: 750rpx;
  height: 540rpx;
  vertical-align: top;
}
.wrap .main{
  position: absolute;
  top: 0;
  width: 750rpx;
}
.wrap .main .paytitle{
  padding-top: 32rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: center;
}
.wrap .main .paytitle .titleIcon{
  width: 48rpx;
  height: 46rpx;
  vertical-align: top;
}
.wrap .main .paytitle .titleText{
  font-size: 42rpx;
  line-height: 54rpx;
  color: #FFF;
  font-weight: bold;
  margin-left: 20rpx;
}
.wrap .main .payText{
  font-size: 30rpx;
  line-height: 42rpx;
  color: #FFF;
  margin-top: 26rpx;
  text-align: center;
}
.wrap .main .btnBox{
  display: flex;
  margin-top: 30rpx;
  justify-content: center;
}
.wrap .main .btnBox .btn{
  padding:8rpx 40rpx;
  box-sizing: border-box;
  border: 1rpx solid #FFF;
  border-radius: 28.5rpx;
  color: #FFF;
  font-size: 30rpx;
  line-height: 42rpx;
}
.wrap .main .btnBox .btn:nth-child(2){
  margin-left: 70rpx;
}
.wrap  .imgBox{
  box-sizing: border-box;
  padding: 30rpx 30rpx 0rpx 30rpx;
}
.wrap .imgBox image{
  width: 100%;
  max-width: 700rpx;
  height: 164rpx;
  vertical-align: top;
}