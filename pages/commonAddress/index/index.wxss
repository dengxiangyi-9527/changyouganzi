/* pages/commonAddress/index/index.wxss */
.common_address_index {
  width: 750rpx;
  height: 100%;
  position: relative;
  background-color: #FFF;
  box-sizing: border-box;
}

.common_address_index .title {
  font-size: 42rpx;
  font-weight: 600;
  color: #333;
  padding-top: 48rpx;
  padding-left: 30rpx;
}

.common_address_index .have_common_address {
  padding: 0rpx 0rpx 49rpx 30rpx;
}

.common_address_index .have_common_address .item {
  border-bottom: 2rpx solid #EDEDED;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 49rpx;
  padding-top: 48rpx;
  margin-right: 30rpx;
}

.common_address_index .have_common_address .item .address_title {
  color: #333;
  font-size: 30rpx;
  font-weight: 600;
  padding-bottom: 8rpx;
}

.address_detail {
  color: #333;
  font-size: 26rpx;
  max-width: 580rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.common_address_index .have_common_address .item .edit {
  width: 32rpx;
  height: 32rpx;
  margin-left: 32rpx;
}

.common_address_index .have_common_address .item .edit image {
  width: 32rpx;
  height: 32rpx;
}

.van-swipe-cell__right {
  background-color: #FE4B3B;
  width: 140rpx;
  color: #fff;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 暂无地址 */
.common_address_index .no_common_address {
  /* width: 310rpx; */
  height: 300rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: auto;
  margin-top: 40%;
}

.common_address_index .no_common_address image {
  width: 240rpx;
  height: 244rpx;
  margin-bottom: 24rpx;
}

.common_address_index .no_common_address view {
  color: #999;
  font-size: 24rpx;
}

/* 新增地址按钮 */
.common_address_index .add_address {
  position: absolute;
  bottom: 60rpx;
  left: 30rpx;
  width: 690rpx;
  background-color: #18AFFF;
  border-radius: 12rpx;
  color: #FFFFFF;
  font-weight: 900;
  border: none;
  font-size: 36rpx;
}

/* iphone X按钮 */
.ipx_button {
  width: 100%;
  height: 160rpx;
  background: #fff;
  padding-bottom: 68rpx;
  box-sizing: border-box;
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 888;
}

.common_address_index .add_address::after {
  border: none;
}
.ipx_ticket{
  padding-bottom: 60rpx;
}