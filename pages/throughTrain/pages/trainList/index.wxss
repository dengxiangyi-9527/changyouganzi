/* pages/throughTrain/pages/trainList/index.wxss */
page{
  width: 750rpx;
  background-color: #F2F3F7;
  height: 100%;
}
.nullList{
  display: flex;
  width: 750rpx;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #999;
}
.trainList {
  padding: 6rpx 0rpx 190rpx 0rpx;
  background-color: #F2F3F7;
}

.single_list {
  width: 702rpx;
  margin: auto;
  box-sizing: border-box;
  padding: 24rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  border-radius: 24rpx;
  background-color: #fff;
  margin-top: 20rpx;
}

.single_left {
  width: 180rpx;
  height: 180rpx;
  border-radius: 30rpx;
  overflow: hidden;
  border: 1px dashed #DDDDDD;
}

.single_img {
  width: 180rpx;
  height: 180rpx;
  display: block;
}

.single_right {
  width: calc(100% - 204rpx);
}

.single_name {
  font-size: 32rpx;
  line-height: 44rpx;
  color: #333333;
  font-weight: bold;
}

.single_tag {
  border: 1rpx solid #24BFB0;
  background: rgba(233, 249, 246, 1);
  border-radius: 4rpx;
  border: 1rpx solid rgba(36, 191, 176, 1);
  font-size: 20rpx;
  color: #24BFB0;
  line-height: 30rpx;
  display: inline-block;
  padding: 0rpx 8rpx;
  margin-top: 8rpx;
  margin-bottom: 8rpx;
}
.price_text{
  font-size: 24rpx;
  line-height: 36rpx;
  color: #999999;
  margin-left: 8rpx;
}
.detail_box{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
}
.detail_text{
  font-size: 22rpx;
  line-height: 34rpx;
  color: #09AFFF;

}
.right_icon{
  width: 16rpx;
  height: 16rpx;
  display: block;
  margin: 10rpx 0rpx 0rpx 8rpx;
}
.single_content{
  position: relative;
}
.price{
  font-size: 42rpx;
  font-weight: 500;
  color: #FF4B3B;
  display: flex;
  align-items: center;
}
.allprice{
  display: flex;
  align-items: flex-end;
}
.price_sym{
  font-size: 24rpx;
}
.warnText{
  font-size: 26rpx;
  line-height: 38rpx;
  margin-top: 400rpx;
  color: #999999;
  text-align: center;
}