/* pages/CustomTour//pages/customized/process/index.wxss */
page{
  width: 100%;
  height: 100%;
}
.process_wrap{
  width: 750rpx;
  min-height: 100%;
  background-color: #F2F3F7;
}
.head_bc{
  width: 750rpx;
  height: 586rpx;
  position: absolute;
  top: 0;
  left: 0;
}
.head_bc image{
  width: 100%;
  height: 100%;
  vertical-align: top;
}
.main_wrap{
  width: 750rpx;
  position: absolute;
  left: 0;
  top: 206rpx;
  padding:  0 20rpx;
  box-sizing: border-box;
  padding-bottom: 80rpx;
  background-image: #F2F3F7;
}
.main_title{
  font-size: 42rpx;
  line-height: 54rpx;
  color: #FFF;
  text-align: center;
  font-weight: bold;
}
.main_steps{
  margin-top: 30rpx;
}
.steps_item{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.steps_icon{
  width: 32rpx;
  height: 32rpx;
  background-color: #6CD4FF;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
 
}
.step_top{
  width: 100%;
  padding-left: 54rpx;
  padding-right: 42rpx;
  box-sizing: border-box;
  display: flex;
  justify-content:space-around;
  white-space: nowrap;
}
.icon{
  width: 20rpx;
  height: 20rpx;
  background-color: #0EB7FD;
  border-radius: 50%;
}
.steps_line{
  width: 108rpx;
  height: 2rpx;
  background-color: #6CD4FF;
  margin-top: 15rpx;
}
.item_text{
  font-size: 24rpx;
  line-height: 36rpx;
  color: #0082B6;
  margin-top: 8rpx;
  white-space: nowrap;
}
.steps_textBox{
  width: 100%;
  margin-top: 8rpx;
  padding:0 10rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
}
.steps_text{
  font-size: 24rpx;
  line-height: 36rpx;
  color: #0082B6;
}
.icon_active{
  background-color: #FFF;
}
.steps_text_active{
  color: #FFF;
}
.main_erro{
  font-size: 24rpx;
  line-height: 36rpx;
  color: #FFF;
  padding: 0 10rpx;
  box-sizing: border-box;
  margin-top: 31rpx;
}
.main_tabBox{
  padding: 0 30rpx;
  box-sizing: border-box;
  background-color: #FFF;
  box-shadow: 0 4rpx 20rpx 0 rgba(0, 0, 0, 0.04);
  margin-top: 30rpx;
  border-radius: 24rpx;
  padding-bottom: 20rpx;
}
.tab_title{
  padding-top: 30rpx;
  padding-bottom: 24rpx;
  box-sizing: border-box;
  font-size: 36rpx;
  line-height: 50rpx;
  font-weight: bold;
  color: #333;
}
.tab_text{
  padding: 15rpx 0;
  box-sizing: border-box;
  display: flex;
}
.tab_text_title{
  font-size: 28rpx;
  line-height: 40rpx;
  color: #999999;
  margin-right: 140rpx;
  white-space: nowrap;
}
.tab_text_main{
  font-size: 28rpx;
  line-height: 40rpx;
  color: #333333;
  font-weight: bold;
}
.personBox{
  width: 100%;
  display: flex;
  align-items: center;
}
.personBox image{
  width: 84rpx;
  height: 84rpx;
  border-radius: 50%;
}
.person_text{
  margin-left: 24rpx;
  font-size: 30rpx;
  line-height: 42rpx;
  color: #333;
  font-weight: bold;
  white-space: nowrap;
}
.person_Satus{
  margin-left: 104rpx;
  font-size: 24rpx;
  line-height: 36rpx;
  color: #FF8B32;
  white-space: nowrap;
}
.kefuBox{
  width: 100%;
  display: flex;
  justify-content: flex-end;
  margin-top: 8rpx;
}
.kefuBtn{
  padding: 9rpx 24rpx;
  box-sizing: border-box;
  border: 2rpx solid #A9E1FF;
  border-radius: 27rpx;
  color: #18AFFF;
  font-size: 28rpx;
  line-height: 40rpx;
  display: flex;
}
.kefuBtn image{
  width: 40rpx;
  height: 40rpx;
  margin-right: 8rpx;
}
.cancelOrder{
  width: 100%;
  padding: 20rpx 0;
  border: 1rpx solid #09AFFF;
  border-radius: 44rpx;
  margin-top: 30rpx;
  text-align: center;
  color: #09AFFF;
  font-size: 36rpx;
  line-height: 50rpx;
}
.toPay{
  width: 750rpx;
  background-color: #FFF;
  position: fixed;
  left: 0;
  bottom: 0;
  display: flex;
  align-items: flex-end;
  justify-content: space-between;
  z-index: 999999;
  padding-bottom: 68rpx;
  box-sizing: border-box;
  box-shadow: 0 -2rpx 20rpx 0 rgba(91, 99, 108, 0.05);
}
.toPay .BottompriceBox{
  display: flex;
}
.toPay .allPrice{
  font-size: 46rpx;
  line-height: 58rpx;
  color: #FE4B3C;
  margin-bottom: 12rpx;
  margin-left: 30rpx;
}
.toPay .title{
  display: flex;
  align-items: center;
  margin-top: 0;
  margin-bottom: 20rpx;
  margin-left: 30rpx;
}
.toPay .title .title_1{
  font-size: 28rpx;
  line-height: 40rpx;
  color: #999;
}
.toPay .title .title_2{
  width: 18rpx;
  height: 12rpx;
}
.toPay .title .title_2 image{
  vertical-align: top;
  width: 100%;
  height: 100%;
  margin-left: 8rpx;
}
.toPay .btnBox{
  padding: 22rpx 62rpx;
  background-color: #09AFFF;
  border-radius: 50rpx;
  display: flex;
  align-items: center;
  text-align: center;
  color: #FFF;
  font-size: 32rpx;
  line-height: 44rpx;
  font-weight: 600;
  margin-right: 30rpx;
  margin-top: 14rpx;
}
